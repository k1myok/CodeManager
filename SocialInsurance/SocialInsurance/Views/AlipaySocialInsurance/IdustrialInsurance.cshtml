@model SocialInsurance.Models.IdustrialInsurance

@{
    ViewBag.Title = "IdustrialInsurance";
    Layout = "~/Views/Shared/_LayoutAlipay.cshtml";
}

<script>
    $("#toast").hide();
</script>
<style>
   .name {
        width: 16.666666%;
    }
</style>
@if (Model.status == "200")
{

}
else
{
    if (Model.status=="100")
    {
        <div class="am-list" am-mode="flat chip">
            <div class="am-list-item">
                <div class="name am-ft-center">结算期</div>
                <div class="name am-ft-center">缴费基数</div>
                <div class="name am-ft-center">缴费月数</div>
                <div class="name am-ft-center">缴费金额</div>
                <div class="name am-ft-center">到账标记</div>
                <div class="name am-ft-center">缴费类别</div>
            </div>
            @foreach (var item in Model.data)
            {
                <div class="am-list-item">

                    <div class="name">
                        <div class="">@item.akf088</div>
                    </div>
                    <div class="name">
                        <div class="am-ft-center">@item.aif005</div>
                    </div>
                    <div class="name">
                        <div class="am-ft-center">@item.aif004</div>
                    </div>
                    <div class="name">
                        <div class="am-ft-center">@item.aif006</div>
                    </div>
                    <div class="name">
                        <div class="am-ft-center">@item.akf084</div>
                    </div>
                    <div class="name">
                        <div class="am-ft-center">@item.akf081</div>
                    </div>
                </div>
            }
        </div>
 if (Model.cpage < Model.pages)
       {
    <div class="am-flexbox" am-mode="average" style="margin-top:15px;">
        <div class="am-flexbox-item">
            <button type="button" id="more" class="am-button am-button-blue">下一页</button>
        </div>
    </div>
    <div class="am-flexbox" am-mode="average" style="margin-top:15px;">
        <div class="am-flexbox-item">
            <button type="button" id="back" class="am-button am-button-blue">返回</button>
        </div>
    </div>
       }
       else
        {
    <div class="am-flexbox" am-mode="average" style="margin-top:15px;">
        <div class="am-flexbox-item">
            <button type="button" id="back" class="am-button am-button-blue">返回</button>
        </div>
    </div>
        }
      }
}
<script type="text/javascript">
        $("#more").click(function ()
        {
            $("#toast").show();
             var cpage =@(Model.cpage)+1;
            var url = "../AlipaySocialInsurance/IdustrialInsurance?cpage=" + cpage;
            $.ajax({
            url: url,
            success: function (msg)
            {
               $("#result").empty().html(msg);
            },
            error: function ()
            { },
            complete: function ()
            {
            $("#toast").hide();
            }
            });
            });
            $("#back").click(function () {
            $("#result").hide();
            $("#list").show();
            });
</script>

