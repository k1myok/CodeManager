@model SocialInsurance.Models.CompanyMonthInsurance

@{
    ViewBag.Title = "CompanyMonthInsurance";
    Layout = "~/Views/Shared/_LayoutAlipay.cshtml";
}

<script>
    $("#toast").hide();
</script>
<style>
    .name {
        width: 14.2857%;
        text-align: center;
    }
</style>
@if (Model.status == "200")
{

}
else
{
    if (Model.status == "100")
    {

        <div class="am-list" am-mode="flat chip">
            <div class="am-list-item">
                <div class="name am-ft-center">结算期</div>
                <div class="name am-ft-center">账户本金</div>
                <div class="name am-ft-center">其中个人缴纳</div>
                <div class="name am-ft-center">月缴费基数</div>
                <div class="name am-ft-center">缴费月数</div>
                <div class="name am-ft-center">到账标记</div>
                <div class="name am-ft-center">缴费类别</div>
            </div>
            @foreach (var item in Model.data)
            {
                <div class="am-list-item">
                    <div class="name am-ft-center">@item.akf088</div>
                    <div class="name am-ft-center">@item.aif034</div>
                    <div class="name am-ft-center">@item.aae082</div>
                    <div class="name am-ft-center">@item.aae180</div>
                    <div class="name am-ft-center">@item.aif004</div>
                    <div class="name am-ft-center">@item.akf084</div>
                    <div class="name am-ft-center">@item.akf081</div>
                </div>

            }
        </div>
        if (Model.cpage < Model.pages)
        {
            <div class="am-flexbox" am-mode="average" style="margin-top:15px;">
                <div class="am-flexbox-item">
                    <button type="button" id="more" class="am-button am-button-blue">下一页</button>
                </div>
            </div>
            <div class="am-flexbox" am-mode="average" style="margin-top:15px;">
                <div class="am-flexbox-item">
                    <button type="button" id="back" class="am-button am-button-blue">返回</button>
                </div>
            </div>
        }
        else
        {
            <div class="am-flexbox" am-mode="average" style="margin-top:15px;">
                <div class="am-flexbox-item">
                    <button type="button" id="back" class="am-button am-button-blue">返回</button>
                </div>
            </div>
        }



    }
}

<script>
    $("#more").click(function () {
        var cpage =@(Model.cpage) +1;
        var url = "../AlipaySocialInsurance/CompanyMonthInsurance?cpage=" + cpage;
        $.ajax({
            url: url,
            success: function (msg)
            {
                $("#result").append(msg);
            },
            error: function () { },
            complete: function () { }
        });
    });
    $("#back").click(function () {
        $("#result").hide();
        $("#list").show();
    });
</script>
