@model SocialInsurance.Models.BirthInsurance
@{
    ViewBag.Title = "生育";
    Layout = null;
}
<style>
    .name
     {
        width:16.666666%;
        text-align:center;
    }

</style>
@if (Model.status == "200")
{
    <div class="am-list-footer" style="padding-top:10px;padding:15px 10px 10px 15px;">
        未查到你要查询相关信息
    </div>

}
else
{
    if (Model.status == "100")
    {
     <div id="resultmore">

       @if(Model.cpage==1)
       {
        <div class="am-list-item">
                <div class="name">结算期</div>
                <div class="name am-ft-center">缴费基数</div>
                <div class="name" >缴费月数</div>
                <div class="name">缴费金额</div>
                <div class="name">到账标记</div>
                <div class="name">缴费类别</div>
         </div>
       }
        @foreach (var item in Model.data)
        {
            <div class="am-list-item">
                        <div class="name">@item.akf088</div>
                        <div class="name">@item.aif005</div>
                        <div class="name">@item.aif004</div>
                        <div class="name">@item.aif006</div>
                        <div class="name">@item.akf084</div>
                        <div class="name">@item.akf081</div>
            </div>
        }
     </div>
        if (Model.cpage<Model.pages &&Model.cpage == 1)
        {
            <div id="morebutton">
                <div class="am-flexbox" am-mode="average" style="margin-top:15px;">
                    <div class="am-flexbox-item">
                        <button type="button" id="more" class="am-button am-button-blue">更多</button>
                    </div>
                </div>
            </div>
            <div class="am-flexbox" am-mode="average" style="margin-top:15px;">
                <div class="am-flexbox-item">
                    <button type="button" id="back" class="am-button am-button-blue">返回</button>
                </div>
            </div>
        }
    }
}
<script type="text/javascript">
    $(function () {
        var cpage=@(Model.cpage);
        var pages=@(Model.pages);
        $(".cpage").val(cpage);
        $(".pages").val(pages);
        if(cpage==pages)
        {
            $("#morebutton").hide();
        }
    });
    $("#more").click(function () {
        $("#toast").show();
        var cpage =@Model.cpage +1;
        var ID = $("#ID").val();
        var IDCard = $("#IDCard").val();
        var url = "../AlipaySocialInsurance/BirthInsurance?cpage=" + cpage;
        $.ajax({
            url: url,
            data: {
                ID: ID,
                IDCard: IDCard
            },
            success: function (msg) {
                alert(msg);
                $("#resultmore").append(msg);
            },
            error: function () { },
            complete: function () {
                $("#toast").hide();
            }
        });
    });
    $("#back").click(function() {
        $("#result").hide();
        $("#list").show();
    });
</script>
