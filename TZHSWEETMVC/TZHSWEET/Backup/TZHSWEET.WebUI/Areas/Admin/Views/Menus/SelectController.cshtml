    <script src="@Url.Content("~/Content/ligerUI/js/plugins/ligerGrid.js")" type="text/javascript"></script>
  
    <script type="text/javascript">
        var g = null;
        $(function () {
            g = $("#maingrid4").ligerGrid({
                columns: [
                { display: '菜单', name: 'ControllerName', align: 'left', width: 130 },
                { display: '路径', name: 'LinkUrl', isSort: false, width: 300, align: 'left' },
                { display: '菜单描述', name: 'Description', isSort: false, width: 200, minWidth: 60 },

                ], pageSize: 10, 
                url: '@Url.Content("~/Admin/Menus/GetAllController")',
                width: '100%', height: '100%'
            });
            $("#pageloading").hide();
        });
        function f_select() {
            return g.getSelectedRow();
        }
    </script>
</head>
