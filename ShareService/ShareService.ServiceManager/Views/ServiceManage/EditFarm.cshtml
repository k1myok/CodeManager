@model ShareService.ServiceManager.Models.ServerFarm

@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
@using (Html.BeginForm("EditFarm", "ServiceManage", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div>
        <img src="~/Images/bg.png" style="width:100%;height:initial;" />
    </div>
        <div class="form-horizontal panel panel-default">

            <div class="panel-heading h4">编辑场信息</div>
            <div class="panel-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Code)

                <div class="form-group">
                    @Html.Label("名称", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("是否启用", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.Enable)
                            @Html.ValidationMessageFor(model => model.Enable, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="submit" value="保存" class="btn btn-default" onclick="ValidateEditFarm()"/>
                    </div>
                    <script>
                        function ValidateEditFarm() {
                            if ($("#Name").val() != null) { return true; }
                            else {
                                alert("名称不能为空！");
                            }
                        }
                    </script>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        @*@Html.ActionLink("退出编辑", "Index")*@
                        <input value="退出编辑" class="btn btn-default" onclick="javascript: ExitEditFarm();" />
                    </div>
                    <script>
                        function ExitEditFarm() {
                            //window.history.back(-1);
                            window.location.href = "./Index/?index=0";
                        }
                    </script>
                </div>
            </div>
        </div>

}
