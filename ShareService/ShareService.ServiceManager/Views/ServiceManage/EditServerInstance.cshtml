@model ShareService.ServiceManager.Models.ServerInstance

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditServerInstance</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm("EditServerInstance", "ServiceManage", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model=>model.FarmCode)
        <div>
            <img src="~/Images/bg.png" style="width:100%;height:initial;" />
        </div>
        <div class="form-horizontal panel panel-default">
            
            <div class="panel-heading h4">编辑服务器信息</div>
            <div class="panel-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Code)

                <div class="form-group">
                    @Html.Label("基址", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("端口", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.HttpPort, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HttpPort, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("是否启用", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.Enable)
                            @Html.ValidationMessageFor(model => model.Enable, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("所属场", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @*@Html.EditorFor(model => model.FarmCode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FarmCode, "", new { @class = "text-danger" })*@
                        @Html.DropDownList("EditServerInstanceDDL",Model.GetFarmNamesSelectList(), new { @class = "btn btn-default col-md-6" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-6">
                        <input type="submit" value="保存" class="btn btn-default" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-6">
                        @*@Html.ActionLink("退出编辑", "Index")*@
                        <input value="退出编辑" class="btn btn-default" onclick="javascript:ExitEditServerInstance();" />
                    </div>
                    <script>
                        function ExitEditServerInstance() {
                            //window.history.back(-1);
                            window.location.href = "./Index/?index=1";
                        }
                    </script>
                </div>
            </div>
        </div>
    }

</body>
</html>
