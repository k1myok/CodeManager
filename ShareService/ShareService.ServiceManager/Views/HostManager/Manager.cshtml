@{
    Layout = "~/Views/Shared/HSplitLayout.cshtml";
}

@section LeftPanel
{
    <script>
        $('#farmsList').ready(function () {
            showFarmsList();
        });
        function showFarmsList()
        {
            $('#loader').show();
            $.ajax({
                url: '../HostManager/FarmsList',
                success: function (data) {
                    $('#farmsList').empty().html(data);
                },
                complete: function () {
                    $('#loader').hide();
                }
            });
        }
    </script>
    <div id="farmsList">
    </div>
}

@section RightPanel
{
    <div id="serviceListContainer" style="width:100%; height:100%;">
    </div>
}

