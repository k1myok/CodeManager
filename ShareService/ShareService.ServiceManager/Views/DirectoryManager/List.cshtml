
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<script>
    $(document).ready(function () {
        $('#mainSplitter').jqxSplitter({ width: '100%', height: $(window).height() - 150, panels: [{ size: 300 }] });
    });
</script>
<div id="mainSplitter">
    <div class="splitter-panel">
        <div class="list-group" style="height:100%;">
            <div class="list-group-item active">
                服务目录
            </div>
            @{
                Html.RenderAction("DirectoryTree");
            }
        </div>

    </div>
    <div class="splitter-panel">
        <div id="serviceListContainer" style="width:100%; height:100%;">

        </div>
    </div>
</div>
