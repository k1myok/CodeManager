@model ShareService.ServiceManager.Models.Groups
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
@using (Html.BeginForm("CreateGroup", "SecurityManager", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("组名", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.GroupName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GroupName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9" style="margin-bottom:10px;position:relative;">
                <input type="submit" value="创建组" class="btn btn-default" />
            </div>
        </div>
    </div>
}

