@model IEnumerable<BigData.ModelBuilding.Models.AnalysisModel>

<script>
    function showDetailOfModel(code)
    {
        $('#loader').show();
        $.ajax({
            url: "../ModelManager/ModelDetail?code=" + code,
            success: function (result) {
                $('#contentContianer').empty().html(result);
                $('#detailWindow').modal('show');
            },
            complete: function () {
                $('#loader').hide();
            }
        });
    }
</script>
<table class="UFTable" style="table-layout:fixed;">
    <tr>
        @*<th>@Html.DisplayNameFor(model => model.Code)</th>*@
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.OutTemplateFilePath)</th>
        <th>@Html.DisplayNameFor(model => model.Description)</th>
        @*<th>@Html.DisplayNameFor(model => model.DirectoryCode)</th>*@
        <th>操作</th>
         
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @*<td>@item.Code</td>*@
            <td>@item.Name</td>
            <td>@item.OutTemplateFilePath</td>
            <td>@item.Description</td>
            @*<td>@item.DirectoryCode</td>*@
            <td data-toggle="modal"><a style="cursor:pointer;" onclick="showDetailOfModel('@item.Code')">详情</a></td>
        </tr>
    }
</table>


<div id="detailWindow" style="clear:both;" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <label class="form">详细信息</label>  
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
            </div>
            <div class="modal-body" style="height:350px;">
                <div id="contentContianer"></div>
            </div>
        </div>
    </div>
</div>



